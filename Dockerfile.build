FROM ubuntu:22.04

# Install build dependencies
RUN apt-get update && \
    apt-get install -y \
    build-essential \
    cmake \
    g++ \
    make \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .

# Set permissions
RUN chmod -R u+rwX SharpishlyApp/src/View || true

# Default command